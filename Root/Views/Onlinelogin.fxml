<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<GridPane fx:id="gridBoard" fx:controller="Root.Pages.Onlinelogin" xmlns:fx="http://javafx.com/fxml" styleClass="background" alignment="center">

    <Label text="Settings:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="IGN" GridPane.columnIndex="0" GridPane.rowIndex="1" >
    </Label>
    <TextField fx:id="ignField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="IP:" GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>

    <TextField fx:id="ipField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Port: " GridPane.columnIndex="0"
           GridPane.rowIndex="3" >
    </Label>

    <TextField fx:id="portField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button styleClass="subscribeReversi" fx:id="submitButton" text="Apply"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleSubmitButton">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>


</GridPane>