<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane prefHeight="720" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Root.Pages.Onlinelobby">
<center>
    <GridPane fx:id="gridBoard" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" gridLinesVisible="false" styleClass="background">
        <Label text="Challenge Player for Reversi:" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.halignment="CENTER">
            <font>
                <Font name="Arial" size="20" ></Font>
            </font>
            <GridPane.margin>
                <Insets top="20" right="0" bottom="20" left="0"></Insets>
            </GridPane.margin>
        </Label>
        <Label text="IGN" GridPane.columnIndex="3" GridPane.rowIndex="1" >
        </Label>
        <TextField fx:id="opponent" prefHeight="40" GridPane.columnIndex="4" GridPane.rowIndex="1" maxWidth="300"/>
    </GridPane>
</center>
<Pane prefHeight="150.0" prefWidth="1280.0" style="-fx-background-color: #FAEBD7;" BorderPane.alignment="CENTER">
    <children>
        <Label fx:id="incomingChallenge" layoutY="300.0" layoutX="10"  minWidth="60"  prefWidth="200" prefHeight="40" minHeight="40">
            <font>
                <Font name="Open Sans Regular" size="18.0"/>
            </font>
        </Label>
        <Button fx:id="challengeButton" layoutX="790.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleChallengeButton"
                style="-fx-background-color: #3d5e8c; -fx-background-radius: 5;" text="Challenge"
                textFill="WHITE">
            <font>
                <Font name="Open Sans Regular" size="16.0"/>
            </font>
        </Button>
        <Button fx:id="subscribeMenu" layoutX="790.0" layoutY="400.0" mnemonicParsing="false" onAction="#subscribeMenuButton"
                style="-fx-background-color: #3d5e8c; -fx-background-radius: 5;" text="Subscribe Reversi"
                textFill="WHITE">
            <font>
                <Font name="Open Sans Regular" size="16.0"/>
            </font>
        </Button>
        <Button fx:id="logoutButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#logoutButton"
                style="-fx-background-color: #8B0000; -fx-background-radius: 5;" text="Logout"
                textFill="WHITE">
            <font>
                <Font name="Open Sans Regular" size="16.0" />
            </font>
        </Button>
        <Button fx:id="acceptChallenge" layoutX="10.0" layoutY="355.0" mnemonicParsing="false" onAction="#acceptChallengeButton"
                style="-fx-background-color: #3d5e8c; -fx-background-radius: 5;" text="Accept Challenge"
                textFill="WHITE">
            <font>
                <Font name="Open Sans Regular" size="16.0" />
            </font>
        </Button>
    </children>
</Pane>
</BorderPane>